<Page x:Name="pgPainting"
    x:Class="Catrobat.Paint.WindowsPhone.View.PaintingAreaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catrobat.Paint.WindowsPhone.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Catrobat.Paint.WindowsPhone.Controls.AppBar"
    xmlns:ucRecEll="using:Catrobat.Paint.WindowsPhone.Controls.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" NavigationCacheMode="Required">

    <Grid x:Name="LayoutRoot"  IsHitTestVisible="True"   ManipulationMode="TranslateX, TranslateY, Rotate, Scale" ManipulationStarted="LayoutRoot_ManipulationStarted_1">

        <!-- <Grid.Background>
            <ImageBrush ImageSource="/Assets/checkeredbgWXGA.png" Stretch="None" />
        </Grid.Background>
-->
       
        <Grid x:Name="PaintingAreaContentPanelGrid" IsHitTestVisible="True"  ManipulationMode="TranslateX, TranslateY, Rotate, Scale" Width="auto" Height="auto" Grid.Row="1" Margin="0,0,0,0" Background="Transparent" >
            <Grid x:Name="PaintingAreaCheckeredGrid" IsHitTestVisible="True"  ManipulationMode="TranslateX, TranslateY, Rotate, Scale" Width="auto" Height="auto"  >
                <Grid.Background>
                    <ImageBrush ImageSource="/Assets/checkeredbgWXGA.png" Stretch="None" />
                </Grid.Background>

                <Canvas x:Name="PaintingAreaCanvasUnderlaying"  Background="Transparent"/>
                <Canvas x:Name="PaintingAreaCanvas" Background="Transparent" ManipulationMode="TranslateX, TranslateY, Rotate, Scale" />
                <Grid Background="#44d3d3d3" Visibility="Collapsed"></Grid>
                <Rectangle x:Name="rectDrawRectangle" DoubleTapped="rectDrawRectangle_DoubleTapped" Fill="Blue" Height="50" HorizontalAlignment="Left" ManipulationMode="System" 
                           Margin="171,263,0,0" PointerMoved="testRectangle_PointerMoved" PointerPressed="testRectangle_PointerPressed" Stroke="Black" VerticalAlignment="Top" Width="50" Visibility="Collapsed" />
            </Grid>

            <Grid x:Name="GridUserControlRectEll" VerticalAlignment="Bottom" Visibility="Collapsed" Width="400">
                <ucRecEll:ucRecEll></ucRecEll:ucRecEll>
            </Grid>

            <Grid x:Name="GridUserControl" Margin="0,0,-25,0" >
                <UserControl x:Name="SliderThicknessControl" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Bottom" Visibility="Collapsed" Width="auto">
                    <Grid x:Name="SliderThicknessGrid" Background="#1F1F1F"  MinHeight="120">
                        <Slider x:Name="SliderThickness" Background="Black" Maximum="50"  Minimum="1" Margin="10,16,130,12"/>

                        <Button x:Name="btnBrushThickness" Content="0" HorizontalAlignment="Stretch" Margin="280,1,12,74" VerticalAlignment="Stretch"/>

                        <Button x:Name="btnRoundImage" BorderBrush="Yellow" Background="Transparent" BorderThickness="4"  HorizontalAlignment="Left" Height="60" Margin="10,66,0,0" VerticalAlignment="Top" Width="80" >
                            <Image Source="/Assets/ToolMenu/icon_menu_ellipse.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="30" ></Image>
                        </Button>
                        <Button x:Name="btnSquareImage" BorderBrush="White" Background="Transparent" BorderThickness="4"  HorizontalAlignment="Left" Height="60" Margin="145,66,0,0" VerticalAlignment="Top" Width="80">
                            <Image Source="/Assets/ToolMenu/icon_menu_rectangle.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="30" ></Image>
                        </Button>

                        <Button x:Name="btnTriangleImage" BorderBrush="White" Background="Transparent" BorderThickness="4"  HorizontalAlignment="Left" Height="60" Margin="280,66,0,0" VerticalAlignment="Top" Width="80">
                            <Image Source="/Assets/ToolMenu/icon_menu_rectangle.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="30,-10,0,0" Height="30" Width="30" UseLayoutRounding="False" d:LayoutRounding="Auto" >
                                <Image.RenderTransform>
                                    <CompositeTransform Rotation="45"/>
                                </Image.RenderTransform>
                            </Image>
                        </Button>
                    </Grid>
                </UserControl>

                <UserControl x:Name="uctrlOwnKeyboard" Height="auto" Width="auto" Margin="0,0,0,0" Visibility="Collapsed">
                    <Grid x:Name="grdOwnKeyboard" Background="#1F1F1F"  MinHeight="120" VerticalAlignment="Bottom" RenderTransformOrigin="0.502,-0.04" Height="298">
                        <Button x:Name="btnValue0" Content="0" HorizontalAlignment="Left" Margin="145,205,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue1" Content="1" HorizontalAlignment="Left" Margin="20,-3,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click" />
                        <Button x:Name="btnValue2" Content="2" HorizontalAlignment="Left" Margin="145,-3,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue3" Content="3" HorizontalAlignment="Left" Margin="270,-3,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue4" Content="4" HorizontalAlignment="Left" Margin="20,65,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue5" Content="5" HorizontalAlignment="Left" Margin="145,65,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue6" Content="6" HorizontalAlignment="Left" Margin="270,65,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue7" Content="7" HorizontalAlignment="Left" Margin="20,134,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue8" Content="8" HorizontalAlignment="Left" Margin="145,134,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnValue9" Content="9" HorizontalAlignment="Left" Margin="270,134,0,0" VerticalAlignment="Top" Height="72" Width="100" FontSize="30" Click="ButtonNumbers_Click"/>
                        <Button x:Name="btnDeleteNumbers" Content="DEL" HorizontalAlignment="Left" Margin="20,207,0,0" VerticalAlignment="Top" Height="71" Width="65" Click="btnDeleteNumbers_Click"/>
                        <Button x:Name="btnAccept" Content="Accept" HorizontalAlignment="Left" Margin="270,205,0,0" VerticalAlignment="Top" Height="72" Width="49" Click="btnAccept_Click"/>
                    </Grid>
                </UserControl>
            </Grid>
        </Grid>
        <Grid x:Name="SpinnerGrid" Grid.Row="0" Visibility="Collapsed"  Grid.RowSpan="2"  Margin="12,12,12,12" Background="#FFB6B6B6" Opacity="0.7">
            <Image Grid.Row="0" Height="50" Source="/Assets/Spinner.png" Stretch="Uniform" Width="50" Canvas.ZIndex="100" Margin="10,10">
                <Image.RenderTransform>
                    <RotateTransform x:Name="SpinningRotateTransform"
                         CenterX="25"
                         CenterY="25" />
                </Image.RenderTransform>
            </Image>
        </Grid>
        
        

        <StackPanel Grid.Row="0" Canvas.ZIndex="10" VerticalAlignment="Top">
            <controls:AppbarTop x:Name="barRecEll"></controls:AppbarTop>
        </StackPanel>
        
        <TextBox x:Name="coordinates" HorizontalAlignment="Left" Margin="87,96,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>

    </Grid>

    <Page.BottomAppBar>
        <CommandBar x:Name="barStandard" Height="72px" Visibility="Visible">
            <AppBarButton x:Name="btnThickness" Label="Pinselstärke">
                <AppBarButton.Icon>
                    <BitmapIcon UriSource="/Assets/ColorPicker/icon_menu_strokes.png"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="btnColor" Label="Farbe">
                <AppBarButton.Icon>
                    <BitmapIcon UriSource="/Assets/ColorPicker/icon_menu_color_palette.png"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="btnTools" Label="Werkzeuge">
                <AppBarButton.Icon>
                    <BitmapIcon UriSource="/Assets/AppBar/menu_tools_.png"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="btnSave" Label="Speichern" />
                <AppBarButton x:Name="btnSaveCopy" Label="Kopie Speichern" />
                <AppBarButton x:Name="btnNewPicture" Label="Neues Bild" />
                <AppBarButton x:Name="btnLoad" Label="Laden" />
                <AppBarButton x:Name="btnFullScreen" Label="Vollbild" />
                <AppBarButton x:Name="btnAbout" Label="Über" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
