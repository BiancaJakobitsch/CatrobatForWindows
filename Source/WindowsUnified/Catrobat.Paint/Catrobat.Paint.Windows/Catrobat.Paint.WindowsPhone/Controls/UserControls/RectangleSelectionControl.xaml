<UserControl
    x:Class="Catrobat.Paint.WindowsPhone.Controls.UserControls.RectangleSelectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catrobat.Paint.WindowsPhone.Controls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="230"
    d:DesignWidth="230" ManipulationMode="All">

    <Grid x:Name="GridMain" Height="230" Width="230" Background="Yellow">
        <!--<Grid x:Name="GridRectangle" Background="Beige" ManipulationDelta="rectRectangleForMovement_ManipulationDelta" ManipulationMode="TranslateX, TranslateY" Height="230">-->
        <Rectangle x:Name="rectRectangleToDraw" Fill="Black" Height="160" HorizontalAlignment="Left" Stroke="Gray"
                StrokeThickness="3" StrokeLineJoin="Miter" Margin="35,35,35,35" 
                 VerticalAlignment="Top" Width="160" />

        <Rectangle x:Name="rectRectangleForMovement" Fill="#01FFFFFF" Height="200"
                   ManipulationDelta="rectRectangleForMovement_ManipulationDelta" ManipulationMode="TranslateX, TranslateY" Stroke="LightSkyBlue" 
                   StrokeThickness="5" Width="200" 
                   DoubleTapped="rectRectangleForMovement_DoubleTapped" Margin="15,15,15,15" />
        
        <!--</Grid>-->
        <Grid x:Name="GridEllCenterBottom" Background="#01FFFFFF" Height="50" HorizontalAlignment="Center" ManipulationDelta="ellCenterBottom_ManipulationDelta_1" 
                ManipulationMode="TranslateY" VerticalAlignment="Bottom" Width="50">
            <Ellipse x:Name="ellCenterBottom" Fill="LightSkyBlue" Height="25"
                HorizontalAlignment="Center" Margin="0,0,0,-25"
                Width="25" />
        </Grid>

        <Grid x:Name="GridEllLeftCenter" Background="#01FFFFFF" Height="50" HorizontalAlignment="Left" ManipulationDelta="ellLeftCenter_ManipulationDelta" ManipulationMode="TranslateX" VerticalAlignment="Center" Width="50">
            <Ellipse x:Name="ellLeftCenter" Fill="LightSkyBlue" Height="25" Margin="-25, 0, 0, 0"
                Width="25" />
        </Grid>
        <Grid x:Name="GridEllLeftBottom" Background="#01FFFFFF" Height="50" HorizontalAlignment="Left" ManipulationDelta="ellLeftBottom_ManipulationDelta"
                ManipulationMode="TranslateX, TranslateY" VerticalAlignment="Bottom" Width="50">
            <Ellipse x:Name="ellLeftBottom" Fill="LightSkyBlue" Height="25" Margin="-25,0,0,-25"
                Width="25" />
        </Grid>
        <Grid x:Name="GridEllLeftTop" Background="#01FFFFFF" HorizontalAlignment="Left" Height="50" ManipulationDelta="ellLeftTop_ManipulationDelta" ManipulationMode="TranslateX, TranslateY" VerticalAlignment="Top" Width="50">
            <Ellipse x:Name="ellLeftTop" Fill="LightSkyBlue" Height="25" Margin="-25,-25,0,0" Width="25" />
        </Grid>
        <Grid x:Name="GridEllRightCenter" Background="#01FFFFFF" Height="50" HorizontalAlignment="Right" ManipulationDelta="ellRightCenter_ManipulationDelta"
                ManipulationMode="TranslateX" VerticalAlignment="Center" Width="50" Grid.ColumnSpan="2">
            <Ellipse x:Name="ellRightCenter" Fill="LightSkyBlue" Height="25" Margin="0,0,-25,0" Width="25" />
        </Grid>
        <Grid x:Name="GridEllRightBottom" Background="#01FFFFFF" Height="50" HorizontalAlignment="Right" ManipulationDelta="ellRightBottom_ManipulationDelta"
                ManipulationMode="TranslateX, TranslateY" VerticalAlignment="Bottom" Width="50" Grid.ColumnSpan="2">
            <Ellipse x:Name="ellRightBottom" Fill="LightSkyBlue" Height="25" Margin="0,0,-25,-25"
             Width="25" />
        </Grid>
        <Grid x:Name="GridEllRightTop" Background="#01FFFFFF" Height="50" HorizontalAlignment="Right" ManipulationDelta="ellRightTop_ManipulationDelta"
                ManipulationMode="TranslateX, TranslateY" VerticalAlignment="Top" Width="50" Grid.ColumnSpan="2">
            <Ellipse x:Name="ellRightTop" Fill="LightSkyBlue" Height="25" Margin="0,-25,-25,0" Width="25">
            </Ellipse>
        </Grid>
        <Grid x:Name="GridEllCenterTop" Background="#01FFFFFF" Height="50" HorizontalAlignment="Center" ManipulationDelta="ellCenterTop_ManipulationDelta"
                ManipulationMode="TranslateY" VerticalAlignment="Top" Width="50">
            <Ellipse x:Name="ellCenterTop" Fill="LightSkyBlue" Height="25" Margin="0,-25,0,0" Width="25" />
        </Grid>
    </Grid>
</UserControl>
