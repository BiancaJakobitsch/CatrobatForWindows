<views:ViewPageBase 
    x:Name="PlayerPage"
    x:Class="Catrobat.IDE.WindowsPhone.Views.Main.PlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Catrobat.IDE.WindowsPhone.Views"
    xmlns:controls="using:Catrobat.IDE.WindowsPhone.Controls"
    xmlns:controls1="using:WinRTXamlToolkit.Controls"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    Background="{ThemeResource AppBackgroundBrush}"
    DataContext="{Binding PlayerViewModel, Source={StaticResource Locator}}">

  <Grid>
    <SwapChainPanel x:Name="swapChainPanel">
      <!-- Loading Project -->

      <!--<Image Source="ms-appx:///Assets/SplashScreen.png" x:Name="ImagePlayerLoadSplashScreen" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill" Opacity="0.5"/>

      <Grid Grid.Row="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="5*"/>
          <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <ProgressRing x:Name="ProgressRingExtendedSplash" Grid.Row="1" Background="Transparent" Margin="0" IsActive="True" Width="40" Height="40" 
                  VerticalAlignment="Top" HorizontalAlignment="Center"/>
      </Grid>-->
    </SwapChainPanel>
    <Grid Visibility="Collapsed">
      <Line Stroke="Red" 
            StrokeThickness="3"
            Stretch="Fill"
            Y1="0"
            Y2="1" />
      <Line Stroke="Red" 
            StrokeThickness="3"
            Stretch="Fill"
            X1="0"
            X2="1"/>
    </Grid>
  </Grid>

  <Page.BottomAppBar>
    <CommandBar VerticalAlignment="Bottom" 
      Visibility="Collapsed" RequestedTheme="Dark" 
      Background="{ThemeResource AppBarBackgroundBrush}">
      <CommandBar.PrimaryCommands>
        <AppBarButton Icon="Refresh" 
          Label="restart"
          Command="{Binding RestartProgramCommand}"/>
        <AppBarButton Icon="Play" 
          Label="resume"
          Command="{Binding PlayProgramCommand}"/>
        <AppBarButton Icon="Camera" 
          Label="set thumbnail"
          Command="{Binding SetThumbnailCommand}"/>
        <AppBarButton Label="axis on"
          Command="{Binding EnableAxisCommand}">
          <AppBarButton.Icon>
            <BitmapIcon UriSource="ms-appx:///Assets/AxisIcon-48.png"/>
          </AppBarButton.Icon> 
        </AppBarButton>
      </CommandBar.PrimaryCommands>
      <CommandBar.SecondaryCommands>
        <AppBarButton Label="take screenshot"
          Command="{Binding TakeScreenshotCommand}"/>
      </CommandBar.SecondaryCommands>
    </CommandBar>
  </Page.BottomAppBar>
  
