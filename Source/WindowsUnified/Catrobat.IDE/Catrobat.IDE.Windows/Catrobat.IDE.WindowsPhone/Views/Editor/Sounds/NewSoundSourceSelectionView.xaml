<views:ViewPageBase 
  x:Class="Catrobat.IDE.WindowsPhone.Views.Editor.Sounds.NewSoundSourceSelectionView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="using:Catrobat.IDE.WindowsPhone.Views"
  xmlns:misc="using:Catrobat.IDE.WindowsShared.Content.Images.Misc"
  mc:Ignorable="d" 
  DataContext="{Binding NewSoundSourceSelectionViewModel, Source={StaticResource Locator}}">

  <Grid x:Name="LayoutRoot" 
          Background="{ThemeResource AppBackgroundBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackPanel x:Name="TitlePanel" 
                Grid.Row="0"
                Margin="12">
      <!--<TextBlock x:Name="ApplicationTitle" 
                 Text="{Binding Resources.Main_TitleUploadProject, 
                 Source={StaticResource LocalizedStrings}}" 
                 Style="{ThemeResource TextNormalStyle}" 
                 />-->
      <TextBlock x:Name="PageTitle" 
                 Text="{Binding Resources.Editor_TitleNewSound, 
                 Source={StaticResource LocalizedStrings}}" 
                 Margin="0 0 0 0" 
                 Style="{ThemeResource TextTitleNormalStyle}"/>
    </StackPanel>

    <StackPanel Grid.Row="1" Margin="12">
      <Button Margin="0" Padding="0" BorderThickness="0"
              Command="{Binding AudioLibraryCommand}" RequestedTheme="Dark" >
        <Button.ContentTemplate>
          <DataTemplate>
            <Grid Margin="0" Height="140" Width="380"
              Background="{ThemeResource Accent1Brush}">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
              </Grid.ColumnDefinitions>
              <misc:AudioLibrary ScaleFactor="0.2" Grid.Column="0" Margin="30 15 15 15" />
              <TextBlock Grid.Column="1" Margin="20" TextWrapping="Wrap"
                VerticalAlignment="Center" HorizontalAlignment="Left" 
                Text="{Binding Resources.Editor_MediaLibrary, 
                Source={StaticResource LocalizedStrings}}" 
                Name="tbGallery" 
                Style="{ThemeResource TextExtraLargeStyle}" />
            </Grid>
          </DataTemplate>
        </Button.ContentTemplate>
      </Button>

      <!--<Button Margin="0 0 10 0" Command="{Binding RecorderCommand}"
              HorizontalAlignment="Stretch">
        <Button.Template>
          <ControlTemplate>
            <Grid Background="{Binding Path=SelectedTheme.AccentColor2.NativeBrush, 
                   " 
                  HorizontalAlignment="Stretch" 
                  Height="140">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
              </Grid.ColumnDefinitions>
              <misc:AudioRecorder ScaleFactor="0.2" Grid.Column="0" Margin="30 15 15 15" />
              <TextBlock Grid.Column="1" Margin="10" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                Text="{Binding Resources.Editor_Recorder, 
                Source={StaticResource LocalizedStrings}}"
                FontSize="50"
                Style="{Binding StaticTheme.TextLargeStyle.NativeStyle, 
                 " />
            </Grid>
          </ControlTemplate>
        </Button.Template>
      </Button>-->
    </StackPanel>
  </Grid>
</views:ViewPageBase>
