<UserControl x:Class="Catrobat.IDE.WindowsPhone.Controls.FormulaControls.FormulaButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80" d:DesignWidth="200">
  
  <Grid Margin="6 0 0 0">
    <Button Click="ButtonFormula_OnClick" BorderBrush="{StaticResource BrickBorderBrush}" Foreground="{StaticResource BrickForegroundBrush}" Margin="0,15,0,1" MinWidth="40">
      <Grid>
        <StackPanel>
          <TextBlock x:Name="TextBlockFormula" FontSize="30">
            <!--<TextBlock.Text>
              <Binding Path="Parent.Formula"
                       Converter="{StaticResource FormulaStringConverter}"
                       ElementName="LayoutRoot">
              </Binding>
            </TextBlock.Text>-->
          </TextBlock>
        </StackPanel>
        <Grid Name="GridTapPreventer" Background="Transparent"/>
      </Grid>
    </Button>
  </Grid>
</UserControl>