          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource SoundBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <StackPanel Orientation="Vertical">
                <TextBlock VerticalAlignment="Center" Text="{Binding Path=Bricks.Speak, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Text, Mode=TwoWay}" IsEnabled="{Binding IsRealObject}" />
