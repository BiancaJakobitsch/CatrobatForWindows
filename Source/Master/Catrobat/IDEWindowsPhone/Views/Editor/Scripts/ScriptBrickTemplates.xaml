          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Path=Bricks.GoNStepsBackGo, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Steps, Converter={StaticResource IntStringConverter}, ConverterParameter=10, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Bricks.GoNStepsBackStepsBack, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.GoNStepsBackBrick>

      <sb:ScriptBrickContentTemplateSelector.IfOnEdgeBounceBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <TextBlock VerticalAlignment="Center" Text="{Binding Path=Bricks.IfOnEdgeBounce, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.IfOnEdgeBounceBrick>

      <sb:ScriptBrickContentTemplateSelector.MoveNStepsBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Path=Bricks.MoveNStepsMove, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Steps, Converter={StaticResource DoubleStringConverter}, ConverterParameter=10.0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Bricks.MoveNStepsSteps, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.MoveNStepsBrick>

      <sb:ScriptBrickContentTemplateSelector.TurnLeftBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Path=Bricks.TurnLeft, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Degrees, Converter={StaticResource DoubleStringConverter}, ConverterParameter=15.0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Bricks.Degrees, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.TurnLeftBrick>

      <sb:ScriptBrickContentTemplateSelector.TurnRightBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Path=Bricks.TurnRight, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Degrees, Converter={StaticResource DoubleStringConverter}, ConverterParameter=15.0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Bricks.Degrees, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.TurnRightBrick>

      <sb:ScriptBrickContentTemplateSelector.SetXBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Path=Bricks.SetXTo, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding XPosition, Converter={StaticResource IntStringConverter}, ConverterParameter=0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.SetXBrick>

      <sb:ScriptBrickContentTemplateSelector.SetYBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Path=Bricks.SetYTo, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding YPosition, Converter={StaticResource IntStringConverter}, ConverterParameter=0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.SetYBrick>

      <sb:ScriptBrickContentTemplateSelector.PlaceAtBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Path=Bricks.PlaceAt, Source={StaticResource LocalizedStrings}}" Margin="10" FontSize="24" />
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="X" Margin="10" FontSize="24" />
                <TextBox Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding XPosition, Converter={StaticResource IntStringConverter}, ConverterParameter=0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
                <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="Y" Margin="10" FontSize="24" />
                <TextBox Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding YPosition, Converter={StaticResource IntStringConverter}, ConverterParameter=0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.PlaceAtBrick>

      <sb:ScriptBrickContentTemplateSelector.PointInDirectionBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="24" Margin="10" Text="{Binding Path=Bricks.PointInDirection, Source={StaticResource LocalizedStrings}}" />
                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Degrees, Converter={StaticResource DoubleStringConverter}, ConverterParameter=90.0, Mode=TwoWay}" InputScope="TelephoneNumber" IsEnabled="{Binding IsRealObject}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="24" Margin="10" Text="{Binding Path=Bricks.Degrees, Source={StaticResource LocalizedStrings}}" />
              </Grid>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.PointInDirectionBrick>

      <sb:ScriptBrickContentTemplateSelector.PointToBrick>
        <DataTemplate>
          <Grid Margin="0">
            <rlb:NormalBrick Background="{StaticResource MotionBrickBrush}" BorderBrush="{StaticResource BrickBorderBrush}">
              <StackPanel>
                <TextBlock VerticalAlignment="Center"  FontSize="24" Margin="10" Text="{Binding Path=Bricks.PointTo, Source={StaticResource LocalizedStrings}}" />
                <controls:ListPicker ItemTemplate="{StaticResource ListBoxSpriteItem}" PageItemTemplate="{StaticResource PageListBoxSpriteItem}" ItemsSource="{Binding Editor.Sprites, Source={StaticResource Locator}, Mode=OneTime}"  SelectedItem="{Binding PointedSprite, Mode=TwoWay}" IsEnabled="{Binding IsRealObject}" Margin="10" />
              </StackPanel>
            </rlb:NormalBrick>
          </Grid>
        </DataTemplate>
      </sb:ScriptBrickContentTemplateSelector.PointToBrick>

      <sb:ScriptBrickContentTemplateSelector.GlideToBrick>
