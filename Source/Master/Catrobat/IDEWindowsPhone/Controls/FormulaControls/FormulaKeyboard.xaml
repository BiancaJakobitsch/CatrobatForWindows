                </Grid>
              </ListBox>
            </Grid>
          </phone:PivotItem>
          <phone:PivotItem Header="Local">
            <Grid Margin="0 -25 0 0">
              <ListBox Name="ListBoxLocalVariables">
                <Grid d:DataContext="{d:DesignInstance variables:UserVariable}">
                  <TextBlock Text="{Binding Name}"></TextBlock>
                </Grid>
              </ListBox>
            </Grid>
          </phone:PivotItem>
