                <Ellipse Grid.Row="1" Grid.Column="1" Fill="#00F4F4F5" Stroke="White" StrokeThickness="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
              </Grid>
              <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                  <RowDefinition Height="1*"/>
                  <RowDefinition Height="2*"/>
                  <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="1.5*"/>
                  <ColumnDefinition Width="2*"/>
                  <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Row="1" Grid.Column="1" Width="7" StrokeThickness="0" HorizontalAlignment="Right" Fill="White"/>
