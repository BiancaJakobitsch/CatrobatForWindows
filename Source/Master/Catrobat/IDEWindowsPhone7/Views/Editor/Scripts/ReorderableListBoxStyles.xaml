                    <Storyboard>
                      <DoubleAnimation
                          Storyboard.TargetName="DropAfterSpace"
                          Storyboard.TargetProperty="Height"
                          To="1"
                          Duration="0:0:0.2" />
                    </Storyboard>
                  </VisualTransition>
                  <VisualTransition
