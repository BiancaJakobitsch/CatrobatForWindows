<Application
  x:Class="Catrobat.Paint.Standalone.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
  xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
  xmlns:paint="clr-namespace:Catrobat.Paint;assembly=Paint"
  xmlns:paintStandAlone="clr-namespace:Catrobat.Paint.Standalone">

  <!--Application Resources-->
  <Application.Resources>
    <paintStandAlone:LocalizedStrings xmlns:local="clr-namespace:Catrobat.Paint.Standalone" x:Key="LocalizedStrings"/>
    
  </Application.Resources>

  <Application.ApplicationLifetimeObjects>
    <!--Required object that handles lifetime events for the application-->
    <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
  </Application.ApplicationLifetimeObjects>

</Application>