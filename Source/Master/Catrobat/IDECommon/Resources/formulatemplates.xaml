  <f:FormulaDefinitionCollection x:Key="FormulaDefinitions">
    <!-- ### Unknown Formula ##########################################################################################################-->
    <f:FormulaDefinition Type="UNKNOWN">
      <f:FormulaDefinition.Template>
        <partControls:FormulaPartControlList>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="Unknown" Style="{StaticResource PartStyleMath}"/>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="OpenBrecket" Style="{StaticResource PartStyleMath}"/>
          <partControls:FormulaPartControlPlaceholderLeft/>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="ParameterSeperator" Style="{StaticResource PartStyleMath}"/>
          <partControls:FormulaPartControlPlaceholderRight/>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="ClosedBrecket" Style="{StaticResource PartStyleMath}"/>
        </partControls:FormulaPartControlList>
      </f:FormulaDefinition.Template>
    </f:FormulaDefinition>

    <!-- ### Number Formulas ##########################################################################################################-->
    <f:FormulaDefinition Type="NUMBER">
      <f:FormulaDefinition.Template>
        <partControls:FormulaPartControlList>
          <partControls:FormulaPartControlNumbers Style="{StaticResource PartStyleNumber}" />
        </partControls:FormulaPartControlList>
      </f:FormulaDefinition.Template>
    </f:FormulaDefinition>


    <!-- ### Math Formulas ##########################################################################################################-->
    <f:FormulaDefinition Type="FUNCTION" Value="RANDOM">
      <f:FormulaDefinition.Template>
        <partControls:FormulaPartControlList>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="Random" Style="{StaticResource PartStyleMath}"/>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="OpenBrecket" Style="{StaticResource PartStyleMath}"/>
          <partControls:FormulaPartControlPlaceholderLeft/>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="ParameterSeperator" Style="{StaticResource PartStyleMath}"/>
          <partControls:FormulaPartControlPlaceholderRight/>
          <partControls:FormulaPartControlStaticText LocalizedResourceName="ClosedBrecket" Style="{StaticResource PartStyleMath}"/>
        </partControls:FormulaPartControlList>
      </f:FormulaDefinition.Template>
    </f:FormulaDefinition>
  </f:FormulaDefinitionCollection>

  <!-- ### Logic Equality Formulas ##########################################################################################################-->
  <f:FormulaDefinition Type="OPERATOR" Value="EQUAL">
    <f:FormulaDefinition.Template>
      <partControls:FormulaPartControlList>
        <partControls:FormulaPartControlPlaceholderLeft/>
        <partControls:FormulaPartControlStaticText LocalizedResourceName="LogicEqual" Style="{StaticResource PartStyleOperatorEquality}"/>
        <partControls:FormulaPartControlPlaceholderRight/>
      </partControls:FormulaPartControlList>
    </f:FormulaDefinition.Template>
  </f:FormulaDefinition>
  </f:FormulaDefinitionCollection>


  <!-- ### Logic Formulas ##########################################################################################################-->
