        <partControls:FormulaPartControlStaticText LocalizedResourceName="LogicOk" Style="{StaticResource PartStyleOperatorLogic}"/>
        <partControls:FormulaPartControlPlaceholderRight/>
      </partControls:FormulaPartControlList>
    </f:FormulaDefinition.Template>
  </f:FormulaDefinition>
  </f:FormulaDefinitionCollection>
</ResourceDictionary>
