<phone:PhoneApplicationPage 
    x:Class="Catrobat.IDE.Phone.Views.Editor.Scripts.ScriptBrickCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bricks="clr-namespace:Catrobat.IDE.Phone.Controls.Bricks"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480"
    shell:SystemTray.IsVisible="True"
    DataContext="{Binding ScriptBrickCategoryViewModel, Source={StaticResource Locator}}">

  <!--LayoutRoot is the root grid where all page content is placed-->
  <Grid x:Name="LayoutRoot" Background="Transparent">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="10 0 0 20">
      <TextBlock x:Name="Headline" Margin="0" 
                 Text="{Binding Resources.Editor_TitleChooseCategory, Source={StaticResource LocalizedStrings}}" 
                 Style="{StaticResource PhoneTextNormalStyle}" />
    </StackPanel>

    <StackPanel Grid.Row="1" Margin="10 0 10 15">
      <Button BorderThickness="0" Command="{Binding MovementCommand}">
        <Button.Template>
          <ControlTemplate>
            <bricks:NormalBrick Grid.Row="0" Background="{StaticResource MotionBrickBrush}" 
                          BorderBrush="{StaticResource BrickBorderBrush}" 
                          Margin="10 0 10 0">
              <TextBlock VerticalAlignment="Center" 
                   Text="{Binding Resources.Brick_CategoryMotion, Source={StaticResource LocalizedStrings}}" 
                   Margin="10" FontSize="24" />
            </bricks:NormalBrick>
          </ControlTemplate>
        </Button.Template>
      </Button>

      <Button BorderThickness="0" Command="{Binding LooksCommand}">
        <Button.Template>
          <ControlTemplate>
        <bricks:NormalBrick Grid.Row="1" Background="{StaticResource LooksBrickBrush}" 
                          BorderBrush="{StaticResource BrickBorderBrush}" 
                          Margin="10 10 10 0">
          <TextBlock VerticalAlignment="Center" 
                   Text="{Binding Resources.Brick_CategoryLooks, Source={StaticResource LocalizedStrings}}" 
                   Margin="10" FontSize="24" />
        </bricks:NormalBrick>
          </ControlTemplate>
        </Button.Template>
      </Button>

      <Button BorderThickness="0" Command="{Binding SoundCommand}">
        <Button.Template>
          <ControlTemplate>
        <bricks:NormalBrick Grid.Row="2" Background="{StaticResource SoundBrickBrush}" 
                          BorderBrush="{StaticResource BrickBorderBrush}" 
                          Margin="10 10 10 0">
          <TextBlock VerticalAlignment="Center" 
                   Text="{Binding Resources.Brick_CategorySound, Source={StaticResource LocalizedStrings}}" 
                   Margin="10" FontSize="24" />
            </bricks:NormalBrick>
          </ControlTemplate>
        </Button.Template>
      </Button>

      <Button BorderThickness="0" Command="{Binding ControlCommand}">
        <Button.Template>
          <ControlTemplate>
        <bricks:NormalBrick Grid.Row="3" Background="{StaticResource ControlBrickBrush}" 
                          BorderBrush="{StaticResource BrickBorderBrush}" 
                          Margin="10 10 10 0">
          <TextBlock VerticalAlignment="Center" 
                   Text="{Binding Resources.Brick_CategoryControl, Source={StaticResource LocalizedStrings}}" 
                   Margin="10" 
                   FontSize="24" />
            </bricks:NormalBrick>
          </ControlTemplate>
        </Button.Template>
      </Button>

      <Button BorderThickness="0" Command="{Binding VariablesCommand}">
        <Button.Template>
          <ControlTemplate>
        <bricks:NormalBrick Grid.Row="4" Background="{StaticResource VariableBrickBrush}" 
                            BorderBrush="{StaticResource BrickBorderBrush}" 
                            Margin="10 10 10 0">
          <TextBlock VerticalAlignment="Center" 
                     Text="{Binding Resources.Brick_CategoryVariables, Source={StaticResource LocalizedStrings}}" 
                     Margin="10" FontSize="24" />
            </bricks:NormalBrick>
          </ControlTemplate>
        </Button.Template>
      </Button>
    </StackPanel>
  </Grid>

</phone:PhoneApplicationPage>
