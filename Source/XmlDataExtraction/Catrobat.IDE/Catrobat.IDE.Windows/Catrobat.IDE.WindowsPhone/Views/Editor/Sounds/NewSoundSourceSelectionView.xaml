<views:ViewPageBase 
  x:Class="Catrobat.IDE.WindowsPhone.Views.Editor.Sounds.NewSoundSourceSelectionView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="using:Catrobat.IDE.WindowsPhone.Views"
  xmlns:misc="using:Catrobat.IDE.WindowsShared.Content.Images.Misc"
  mc:Ignorable="d" 
  DataContext="{Binding NewSoundSourceSelectionViewModel, Source={StaticResource Locator}}">

  <Grid x:Name="LayoutRoot" 
        Background="{Binding StaticTheme.ApplicationBackgroundBrush.NativeBrush, 
        Source={StaticResource ThemeChooser}}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="10 0 10 20">
      <TextBlock Margin="0" Text="{Binding Resources.Editor_TitleNewSound, Source={StaticResource LocalizedStrings}}" Name="Headline" Style="{Binding StaticTheme.TextNormalStyle.NativeStyle, Source={StaticResource ThemeChooser}}" />
    </StackPanel>

    <StackPanel Grid.Row="1" Margin="10 20 0 15">
      <Button Margin="0" Padding="0" BorderThickness="0"
              Command="{Binding AudioLibraryCommand}" >
        <Button.ContentTemplate>
          <DataTemplate>
            <Grid Margin="0" Height="140" Width="380"
              Background="{Binding Path=SelectedTheme.AccentColor1.NativeBrush, 
              Source={StaticResource ThemeChooser}}" >
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
              </Grid.ColumnDefinitions>
              <misc:AudioLibrary ScaleFactor="0.2" Grid.Column="0" Margin="30 15 15 15" />
              <TextBlock Grid.Column="1" Margin="20" TextWrapping="Wrap"
                VerticalAlignment="Center" HorizontalAlignment="Left" 
                Text="{Binding Resources.Editor_MediaLibrary, 
                Source={StaticResource LocalizedStrings}}" 
                Name="tbGallery" 
                FontSize="40"
                Style="{Binding StaticTheme.TextLargeStyle.NativeStyle, 
                Source={StaticResource ThemeChooser}}" />
            </Grid>
          </DataTemplate>
        </Button.ContentTemplate>
      </Button>

      <!--<Button Margin="0 0 10 0" Command="{Binding RecorderCommand}"
              HorizontalAlignment="Stretch">
        <Button.Template>
          <ControlTemplate>
            <Grid Background="{Binding Path=SelectedTheme.AccentColor2.NativeBrush, 
                  Source={StaticResource ThemeChooser}}" 
                  HorizontalAlignment="Stretch" 
                  Height="140">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
              </Grid.ColumnDefinitions>
              <misc:AudioRecorder ScaleFactor="0.2" Grid.Column="0" Margin="30 15 15 15" />
              <TextBlock Grid.Column="1" Margin="10" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                Text="{Binding Resources.Editor_Recorder, 
                Source={StaticResource LocalizedStrings}}"
                FontSize="50"
                Style="{Binding StaticTheme.TextLargeStyle.NativeStyle, 
                Source={StaticResource ThemeChooser}}" />
            </Grid>
          </ControlTemplate>
        </Button.Template>
      </Button>-->
    </StackPanel>
  </Grid>
</views:ViewPageBase>
