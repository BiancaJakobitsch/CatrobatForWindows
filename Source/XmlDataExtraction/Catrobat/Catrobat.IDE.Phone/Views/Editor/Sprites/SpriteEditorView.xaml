<phone:PhoneApplicationPage x:Class="Catrobat.IDE.Phone.Views.Editor.Sprites.SpriteEditorView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
  xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:reorderableListbox="clr-namespace:Catrobat.IDE.Phone.Controls.ReorderableListbox"
  xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
  xmlns:buttons="clr-namespace:Catrobat.IDE.Phone.Controls.Buttons"
  mc:Ignorable="d"
  xmlns:appBar="clr-namespace:Catrobat.IDE.Phone.Controls.AppBar"
  xmlns:models="clr-namespace:Catrobat.IDE.Core.Models;assembly=Catrobat.IDE.Core"
  d:DesignWidth="480"
  d:DesignHeight="768"
  FontFamily="{StaticResource PhoneFontFamilyNormal}"
  FontSize="{StaticResource PhoneFontSizeNormal}"
  Foreground="{StaticResource PhoneForegroundBrush}"
  SupportedOrientations="Portrait"
  Orientation="Portrait"
  shell:SystemTray.IsVisible="False"
  DataContext="{Binding SpriteEditorViewModel, Source={StaticResource Locator}}">

  <phone:PhoneApplicationPage.Resources>
    <buttons:PlayPauseButtonGroup x:Key="PlayPauseButtonGroupSounds" Command="{Binding SoundsPlayStateChangedCommand}" />
  </phone:PhoneApplicationPage.Resources>

  <Grid x:Name="LayoutRoot" 
        Background="{Binding StaticTheme.ApplicationBackgroundBrush.NativeBrush, 
        Source={StaticResource ThemeChooser}}">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <Grid Grid.Row="0" Margin="10 0 10 10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding SelectedSprite.Name}" 
                     Grid.Column="0" FontSize="36"
                     Style="{Binding StaticTheme.TextNormalStyle.NativeStyle, Source={StaticResource ThemeChooser}}" />
        <HyperlinkButton Grid.Column="1" HorizontalAlignment="Right"
                         Content="{Binding Resources.Editor_Rename, Source={StaticResource LocalizedStrings}}"
                         Command="{Binding RenameSpriteCommand}"/>
      </Grid>

      <!--<Grid Grid.Row="0">
        <Grid Margin="15" >
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" FontSize="35" Text="{Binding SelectedSprite.Name}"/>
          <HyperlinkButton Grid.Column="1" Content="{Binding Resources.Editor_Camera_Rename, Source={StaticResource LocalizedStrings}}"
                           Command="{Binding RenameSpriteCommand}"/>
        </Grid>
      </Grid>-->

      <controls:Pivot 
        Name="PivotMain" Grid.Row="1" Margin="0 -30 0 0" 
        SelectedIndex="{Binding SelectedPivotIndex, Mode=TwoWay}">
        <!--Pivot item scripts-->
        <controls:PivotItem Name="PivotScripts"
          Header="{Binding Resources.Editor_PivotActions, Source={StaticResource LocalizedStrings}}">
          <Grid DataContext="{Binding}">



            <reorderableListbox:ReorderableListBox
                x:Name="ReorderListBoxScriptBricks"
                Visibility="Visible"
                SelectionMode="Multiple"
                ItemsSourcePerformance="{Binding ScriptBricks}"
                ItemTemplate="{StaticResource ScriptsBrickTemplate}"
                ItemContainerStyle="{StaticResource ReorderableListBoxItemStyleScriptBrick}" 
                SmartSelectedItems="{Binding SelectedActions}"
                VerticalItemMargin="-10"
            ></reorderableListbox:ReorderableListBox>
              
              
            <TextBlock 
              Text ="{Binding Resources.Editor_ClickPlusToAddAction, Source={StaticResource LocalizedStrings}}"
              Visibility="{Binding IsScirptBricksEmpty, Converter={StaticResource BoolVisibilityConverter}}"
              Style="{Binding StaticTheme.TextLargeStyle.NativeStyle, Source={StaticResource ThemeChooser}}"
              TextWrapping="Wrap"
              TextAlignment="Center"
              VerticalAlignment="Center"
              HorizontalAlignment="Center" />
          </Grid>
        </controls:PivotItem>

        <!--Pivot item costume-->
        <controls:PivotItem Name="PivotCostumes" 
          Header="{Binding Resources.Editor_PivotCostumes, Source={StaticResource LocalizedStrings}}">
          <Grid DataContext="{Binding}">
                        <reorderableListbox:ReorderableListBox
                x:Name="ReorderListBoxCostumes"
                Visibility="Visible"
                ItemsSourcePerformance="{Binding Costumes}"
                ItemContainerStyle="{StaticResource ReorderableListBoxItemStyleScriptBrick}"
                SmartSelectedItems="{Binding SelectedCostumes}"
                ItemTemplate="{StaticResource CostumesTemplate}"
            ></reorderableListbox:ReorderableListBox>


                        <TextBlock 
              Text ="{Binding Resources.Editor_ClickPlusToAddCostume, Source={StaticResource LocalizedStrings}}"
              Visibility="{Binding IsCostumesEmpty, Converter={StaticResource BoolVisibilityConverter}}"
              Style="{Binding StaticTheme.TextLargeStyle.NativeStyle, Source={StaticResource ThemeChooser}}"
              TextWrapping="Wrap"
              TextAlignment="Center"
              VerticalAlignment="Center"
              HorizontalAlignment="Center" />
          </Grid>
        </controls:PivotItem>

        <!--Pivot item sounds-->
        <controls:PivotItem Name="PivotSounds" 
                            Header="{Binding Resources.Editor_PivotSounds, Source={StaticResource LocalizedStrings}}">
          <Grid DataContext="{Binding}">

            <reorderableListbox:ReorderableListBox
                x:Name="ReorderListBoxSounds"
                Visibility="Visible"
                SelectionMode="Multiple"
                ItemsSourcePerformance="{Binding Sounds}"
                ItemContainerStyle="{StaticResource ReorderableListBoxItemStyleScriptBrick}" 
                SmartSelectedItems="{Binding SelectedSounds}">
                <reorderableListbox:ReorderableListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="{Binding StaticTheme.SoundsBrush.NativeBrush, Source={StaticResource ThemeChooser}}" Margin="0 5 0 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <buttons:PlayPauseButton Group="{StaticResource PlayPauseButtonGroupSounds}" 
                                RoundBorderThickness="6" Margin="0 12 0 12"
                                Grid.Column="0" Height="80" Width="80" />
                            <Grid Grid.Column="1" Margin="5">
                                <TextBlock Grid.Row="0" FontSize="28" Margin="15 5 5 5" Text="{Binding Name}" 
                    VerticalAlignment="Center" d:DataContext="{d:DesignInstance models:Sound}" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </reorderableListbox:ReorderableListBox.ItemTemplate>
                        </reorderableListbox:ReorderableListBox>
                    
            <TextBlock 
              Text ="{Binding Resources.Editor_ClickPlusToAddSound, Source={StaticResource LocalizedStrings}}"
              Visibility="{Binding IsSoundsEmpty, Converter={StaticResource BoolVisibilityConverter}}"
              Style="{Binding StaticTheme.TextLargeStyle.NativeStyle, Source={StaticResource ThemeChooser}}"
              TextWrapping="Wrap"
              TextAlignment="Center"
              VerticalAlignment="Center"
              HorizontalAlignment="Center" />
          </Grid>
        </controls:PivotItem>
      </controls:Pivot>

      <StackPanel Grid.Row="2">
        <appBar:EditorAppBar
        Visibility="{Binding IsVisibleScripts, Converter={StaticResource BoolVisibilityConverter}}" 
        VerticalAlignment="Bottom"
        TargetType="Script"
        ClearSelectionCommand="{Binding ClearScriptsSelectionCommand}"
        CopyCommand="{Binding CopyScriptBrickCommand}"
        DeleteCommand="{Binding DeleteScriptBrickCommand}"
        PlayCommand="{Binding StartPlayerCommand}"
        NewCommand="{Binding AddNewScriptBrickCommand}"
        NumberOfSelectedItems="{Binding SelectedActions.Count}"/>
        <appBar:EditorAppBar
        Visibility="{Binding IsVisibleCostumes, Converter={StaticResource BoolVisibilityConverter}}" 
        VerticalAlignment="Bottom"
        TargetType="Costume"
        ClearSelectionCommand="{Binding ClearCostumesSelectionCommand}"
        CopyCommand="{Binding CopyCostumeCommand}"
        DeleteCommand="{Binding DeleteCostumeCommand}"
        EditCommand="{Binding EditCostumeCommand}"
        PlayCommand="{Binding StartPlayerCommand}"
        NewCommand="{Binding AddNewCostumeCommand}"
        NumberOfSelectedItems="{Binding SelectedCostumes.Count}"/>
        <appBar:EditorAppBar
        Visibility="{Binding IsVisibleSounds, Converter={StaticResource BoolVisibilityConverter}}" 
        VerticalAlignment="Bottom"
        TargetType="Sound"
        ClearSelectionCommand="{Binding ClearSoundsSelectionCommand}"
        DeleteCommand="{Binding DeleteSoundCommand}"
        EditCommand="{Binding EditSoundCommand}"
        PlayCommand="{Binding StartPlayerCommand}"
        NewCommand="{Binding AddNewSoundCommand}"
        NumberOfSelectedItems="{Binding SelectedSounds.Count}"/>
      </StackPanel>


    </Grid>
  </Grid>
</phone:PhoneApplicationPage>
