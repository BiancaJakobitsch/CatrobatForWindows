<UserControl x:Class="Catrobat.IDE.Phone.Controls.FormulaControls.FormulaButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:formulaControls="clr-namespace:Catrobat.IDE.Phone.Controls.FormulaControls"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="80" d:DesignWidth="200">

  <Grid x:Name="LayoutRoot">
    <Button Name="ButtonFormula" Click="ButtonFormula_OnClick">
      <Grid>
        <StackPanel>
          <formulaControls:FormulaViewer Name="FormulaViewer" NormalFontSize="30" IsEditEnabled="False" IsMultiline="False"/>
        </StackPanel>
        <Grid Name="GridTapPreventer" Background="Transparent"/>
      </Grid>
    </Button>
  </Grid>
</UserControl>